<div id="surf-sticks-navbar" class="justify-content-between navbar navbar-light navbar-lewagon navbar-expand-sm ">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "single-fin-simple.jpeg", class:"avatar" %>
  <% end %>
  <%= link_to "/", class: "navbar-brand" do %>
    <div class="d-flex justify-content-center">
      <h1>surfsticks</h1>
    </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item-active">
        <%= link_to "Surfboards", "/surfboards", class: "nav-link", style: 'color:white; letter-spacing: 2px; margin-right: 5px' %>
      </li>
      <li class="nav-item-active">
        <%= link_to "Dashboard", "/users/#{current_user.id}/dashboard", class: "nav-link", style: 'color:white; letter-spacing: 2px; margin-right: 15px' %>
      </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, width: 40, height: 40, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else  %>
            <%= image_tag "user-black.svg", width: 40, height: 40, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <p class="dropdown-item"><strong><%= current_user.username.capitalize %></strong></p>
            <%= link_to "Edit profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link", style: 'color:white; letter-spacing: 2px; margin-right: 5px' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
