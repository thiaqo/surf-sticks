<div class="container">
  <div class="row my-5 justify-content-between">
    <h1><%= current_user.name %></h1>
    <div>
      <% if current_user.photo.attached? %>
      <%= cl_image_tag current_user.photo.key, width: 56, height: 56, crop: :thumb, gravity: :face, class: "avatar-large" %>
      <% end %>
    </div>
  </div>

  <% if @surfboard_bookings_size.positive? %>
  <div class="row my-3">
    <h2>Bookings for your surfboards</h2>
  </div>
  <% end %>

  <div class="row mt-5">
    <% unless @surfboard_current_bookings.empty? %>
    <div class="col-md-6">
      <h3>Current bookings</h3>
      <% @surfboard_current_bookings.each do |booking| %>

      <%= link_to booking_path(booking) do %>

        <div class="card-trip">
          <% if booking.surfboard.photo.attached? %>
          <%= cl_image_tag booking.surfboard.photo.key %>
          <% end %>
          <div class="card-trip-infos p-3">
            <div>
              <p><strong>Borrower: </strong></p>
              <p><strong>Surfboard: </strong><%= booking.surfboard.name %> </p>
              <p><strong>Return date: </strong><%= booking.return_date %></p>
            </div>
            <h4><%= booking.user.name %></h4>
            <p><strong>Price per day: </strong><%= booking.price_per_day %></p>
            <p><strong>Total revenue from booking: </strong><%= booking.price_per_day * (booking.return_date - booking.collection_date).to_i %></p>
            <% if booking.user.photo.attached? %>
            <%= cl_image_tag booking.user.photo.key, class: "card-trip-user avatar-bordered" %>
            <% end %>
          </div>
        </div>

      <% end %>

      <% end %>
    </div>
    <% end %>

