            <% if booking.user.photo.attached? %>
            <%= cl_image_tag booking.user.photo.key, class: "card-trip-user avatar-bordered" %>
            <% end %>
          </div>
        </div>

      <% end %>
      <% end %>
    </div>
    <% end %>

    <% unless @surfboard_pending_bookings.empty?  %>
    <div class="col-md-6">
      <h3 class="m-2">Pending bookings</h3>
      <% @surfboard_pending_bookings.each do |booking| %>

