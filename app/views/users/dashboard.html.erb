<div class="container">
  <div class="row my-5">
    <h1><%= current_user.email %></h1>
  </div>

  <% unless @surfboard_bookings.empty? %>
  <div class="row my-3">
    <h2>Bookings for your surfboards</h2>
  </div>

  <% unless @current_surfboard_bookings.empty? %>
  <div class="row mt-5">
    <div class="col-md-6">
      <h3>Current bookings</h3>
      <% @current_surfboard_bookings.each do |booking| %>

      <div class="card-product">
        <img src="borrower_avatar" />
        <div class="card-product-infos">
          <h4><%= booking.user.email %></h4>
          <p><strong>Borrower: </strong></p>
          <p><strong>Surfboard: </strong><%= booking.surfboard.name %> </p>
          <p><strong>Return date: </strong><%= booking.return_date %></p>
          <p><strong>Price per day: </strong><%= booking.price_per_day %></p>
          <p><strong>Total revenue from booking: </strong><%= booking.price_per_day * (booking.return_date - booking.collection_date).to_i %></p>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>

    <% unless @upcoming_surfboard_bookings.empty? %>
    <div class="col-md-6">
      <h3>Upcoming bookings</h3>
      <% @upcoming_surfboard_bookings.each do |booking| %>
      <div class="card-product">
        <img src="borrower_avatar" />
        <div class="card-product-infos">
          <h4><%= booking.user.email %></h4>
          <p><strong>Surfboard: </strong><%= booking.surfboard.name %> </p>
          <p><strong>Collection date: </strong><%= booking.collection_date %></p>
          <p><strong>Return date: </strong><%= booking.return_date %></p>
          <p><strong>Price per day: </strong><%= booking.price_per_day %></p>
          <p><strong>Total revenue from booking: </strong><%= booking.price_per_day * (booking.return_date - booking.collection_date).to_i %></p>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>

    <% unless @pending_surfboard_bookings.empty?  %>
    <div class="col-md-6">
      <h3>Pending bookings</h3>
      <% @pending_surfboard_bookings.each do |booking| %>
      <div class="card-product">
        <img src="borrower_avatar" />
        <div class="card-product-infos">
          <h4><%= booking.user.email %></h4>
          <p><strong>Surfboard: </strong><%= booking.surfboard.name %> </p>
          <p><strong>Collection date: </strong><%= booking.collection_date %></p>
          <p><strong>Return date: </strong><%= booking.return_date %></p>
          <p><strong>Price per day: </strong><%= booking.price_per_day %></p>
          <p><strong>Total revenue from booking: </strong><%= booking.price_per_day * (booking.return_date - booking.collection_date).to_i %></p>
        </div>
      </div>
      <div class="d-flex justify-content-around">
        <%= link_to "Accept", booking_path(booking, booking: { accepted: true }), method: :patch, class: "btn btn-sm btn-outline-success" %>
        <%= link_to "Decline", booking_path(booking, booking: { accepted: false }), method: :patch, accepted: false, class: "btn btn-sm btn-outline-danger" %>
      </div>
      <% end %>
    </div>
    <% end %>

    <% unless @past_surfboard_bookings.empty? %>
    <div class="col-md-6">
      <h3>Past bookings</h3>
