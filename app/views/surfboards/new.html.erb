<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">

      <h1>Add a new surfboard</h1>

      <%= simple_form_for [@user, @surfboard] do |f| %>

        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :board_type %>
          <%= f.input :fin_type %>
          <%= f.input :brand %>
          <%= f.input :length %>
          <%= f.input :volume %>
          <%= f.input :price_per_day %>
          <%= f.input :address %>
          <%= f.input :photo, as: :file %>
        </div>

      <div class="form-actions">
        <%= f.submit %>
      </div>
      <% end %>

      <%= link_to 'Back', surfboards_path %>
    </div>
  </div>
</div>

